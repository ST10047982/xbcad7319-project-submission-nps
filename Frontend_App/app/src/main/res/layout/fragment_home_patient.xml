            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.565" />

        <TextView
            android:id="@+id/txtMedicalTests"
            android:layout_width="155dp"
            android:layout_height="24dp"
            android:gravity="center"
            android:text="Medical Tests"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.808"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.565" />


        <TextView
            android:id="@+id/txtNotificationCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:visibility="gone"
            android:background="@color/purple_700"
            android:padding="8dp"
            tools:layout_editor_absoluteX="349dp"
            tools:layout_editor_absoluteY="460dp"
            app:layout_constraintTop_toTopOf="@+id/ibtnNotifications"
            app:layout_constraintStart_toEndOf="@+id/ibtnNotifications"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>